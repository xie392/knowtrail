{
	"scripts": {
		"preinstall": "node ./scripts/preinstall.js",
		"start:client": "pnpm --prefix packages/client dev",
		"start:server": "pnpm --prefix packages/server start:dev",
		"start": "npm-run-all --parallel start:client start:server",
		"test": "pnpm --prefix packages/server test",
		"lint": "pnpm --prefix packages/server lint && pnpm --prefix packages/client lint",
		"build:client": "pnpm --prefix packages/client build",
		"build:server": "pnpm --prefix packages/server build",
		"build": "npm-run-all --parallel build:client build:server"
	},
	"dependencies": {
		"@vueuse/core": "^10.5.0",
		"css-inline": "^0.11.2",
		"lodash-es": "^4.17.21"
	},
	"devDependencies": {
		"@types/lodash-es": "^4.17.12",
		"npm-run-all": "^4.1.5"
	}
}